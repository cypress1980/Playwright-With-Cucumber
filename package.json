{
  "name": "playwright-cucumber-pom",
  "version": "1.0.0",
  "description": "Playwright + Cucumber BDD POM example for saucedemo",
  "main": "index.js",
  "scripts": {
  "test:cucumber:smoke": "cucumber-js --require ./smoke/support --require ./smoke/step_definitions --format json:reports/cucumber_report.json --tags @smoke ./smoke/features",
   "test:cucumber:regression": "cucumber-js --require ./smoke/support --require ./smoke/step_definitions --format json:reports/cucumber_report.json --tags @regression ./smoke/features",
  "report": "node reports/generate-report.js",
  "test": "npm run test:cucumber && npm run report",
  "test:ci:smoke": "npm run test:cucumber:smoke || true && npm run report",
  "test:ci:regression": "npm run test:cucumber:regression || true && npm run report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cucumber/cucumber": "^9.0.0",
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "cucumber-html-reporter": "^7.1.0",
    "multiple-cucumber-html-reporter": "^3.9.2"
  }
}
